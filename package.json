{
  "name": "bankroller-core",
  "version": "0.2.0",
  "description": "Core bankroller functionality",
  "main": "./lib/index",
  "scripts": {
    "tsmon": "nodemon --delay 2 --inspect --watch ../ --ignore ../dc-protocol --",

    "start:local" : "sh run.sh local src/index.ts",
    "start:rinkeby" : "sh run.sh rinkeby src/index.ts",
    "start:ropsten" : "sh run.sh ropsten src/index.ts",
    "start:rinkeby" : "sh run.sh rinkeby src/index.ts",

    "build:ts": "yarn typescript",
    "build": "yarn typescript",
    "check:build": "nodemon --inspect ./lib/index.js --delay 2 --watch ../ --ignore ../dc-protocol",
    "typescript": "tsc --build",
    "clean": "rimraf lib",
    "reset": "rm -rf ./data/DB && rm -rf ./data/messaging",
    "test:l" : "sh run.sh local   src/__tests__/game.test.ts",
    "test"   : "sh run.sh ropsten src/__tests__/game.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "dependencies": {
    "dc-configs": "^0.2.0",
    "dc-core": "^0.2.0",
    "dc-ethereum-utils": "0.2.0",
    "dc-logging": "^0.2.0",
    "dc-messaging": "0.2.0",
    "rimraf": "2.6.2",
    "chai": "^4.1.2",
    "mocha": "^3.2.0"
  }
}
