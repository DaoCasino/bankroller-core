{
  "name": "bankroller-core",
  "version": "1.0.0",
  "description": "Core bankroller functionality",
  "main": "./lib/index",
  "scripts": {
    "tsmon": "nodemon --delay 2 --inspect --watch ../ --ignore ../dc-protocol -r ts-node/register --",
    
    "start:l" : "sh run.sh local   src/index.ts",
    "start"   : "sh run.sh ropsten src/index.ts",
    
    "build": "yarn typescript",
    "check:build": "nodemon --inspect ./lib/index.js --delay 2 --watch ../ --ignore ../dc-protocol",
    "typescript": "tsc --build",
    "clean": "rimraf lib",
    "reset": "rm -rf ./data/DB && rm -rf ./data/messaging",
    "test:l" : "sh run.sh local   src/__tests__/fte.test.ts",
    "test"   : "sh run.sh ropsten src/__tests__/fte.test.ts"
  },
