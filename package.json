  "license": "GPL-3.0",
  "dependencies": {
    "@types/bn.js": "4.11.1",
    "@types/web3": "1.0.3",
    "axios": "^0.18.0",
    "bn.js": "4.11.8",
    "dc-configs": "^1.0.0",
    "dc-core": "^1.0.0",
    "dc-ethereum-utils": "1.0.0",
    "dc-logging": "^1.0.0",
    "dc-messaging": "1.0.0",
    "debug": "^3.1.0",
    "ipfs": "0.31.7",
    "ipfs-pubsub-room": "1.4.0",
    "ipfs-repo": "0.23.1",
    "js-cryptico": "^1.0.2",
    "nedb": "^1.8.0",
