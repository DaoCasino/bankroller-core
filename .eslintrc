{
  "parser" : "babel-eslint",
  "extends": "standard",
  "globals": {
      "web3"           : true,
      "artifacts"      : true,
      "fetch"          : true,
      "localStorage"   : true,
      "self"           : true,
      "DCLib"          : true,
      "XMLHttpRequest" : true
  },
  "plugins": [
    "babel"
  ],
  "rules": {
    "no-debugger"                             : ["warn"],
    "no-unreachable"                          : ["warn"],
    "no-unused-vars"                          : ["warn"],
    "no-return-await"                         : ["off"],
    "no-multi-spaces"                         : ["off"],
    "key-spacing"                             : ["off"],
    "camelcase"                               : ["off"],
    "standard/no-callback-literal"            : ["off"],
    "standard/object-curly-even-spacing"      : ["off"],
    "standard/computed-property-even-spacing" : ["off"],
    "new-cap"                                 : ["off"],
    "semi"                                    : ["warn"],
    "no-tabs"                                 : ["warn"],
    "no-irregular-whitespace"                 : ["warn"],
    "keyword-spacing"                         : ["warn"],
    "brace-style"                             : ["warn"],
    "comma-spacing"                           : ["off"],
    "spaced-comment"                          : ["warn"],
    "no-mixed-spaces-and-tabs"                : ["warn"],
    "arrow-spacing"                           : ["warn"],
    "space-unary-ops"                         : ["warn"],
    "eol-last"                                : ["warn"],
    "comma-dangle"                            : ["warn"],
    "space-infix-ops"                         : ["warn"],
    "no-trailing-spaces"                      : ["warn"],
    "no-multiple-empty-lines"                 : ["off"],
    "space-in-parens"                         : ["off"],
    "space-before-function-paren"             : ["warn"],
    "space-before-blocks"                     : ["warn"],
    "padded-blocks"                           : ["off"],
    "indent"                                  : ["warn"]
  }
}
